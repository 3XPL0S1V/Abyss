{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "scripts": {
      "build": "npm i"
    }
  },
  "dev": {
    "scripts": {
      "build": "npm i",
      "run": "npm start"
    }
  }
}
